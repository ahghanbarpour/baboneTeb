<div class="row">
	<div class="col s12 m12 l12">
		<div id="button-trigger" class="card card card-default scrollspy">
			<div class="card-content">
				<h4 class="card-title">لیست سوال و جواب</h4>
				<div class="row">
					<div class="col s12">


						<div class="chips chips-placeholder input-field"><input class="input" id="66f4c683-e704-8dab-d449-8677d2c2649c" placeholder="Enter a tag"></div>
						<button id="btn1" type="button" class="btn btn-primary btn-block">جستجو</button>
					</div>

					</div>
					<br />
					<table id="data-table-simple" class="display">
						<thead>
							<tr>
								<th>نام</th>
								<th>نام خانوادگی</th>
								<th>تلفن همراه</th>
								<th>ایمیل</th>
								<th>مبلغ پرداخت شده</th>
							</tr>
						</thead>
						<tbody>
							@{
								foreach (var i in Model)
								{
									if(i.IsFinally == true)
									{
									<tr>
									    <td style="display:none">@i.orderId</td>
										<td>@i.user.FirstName</td>
										<td>@i.user.LastName</td>
										<td>@i.user.PhoneNumber</td>
										<td>@i.user.Email</td>
										<td>@i.totalPrice</td>
									</tr>
									}
								}
							}

							

						</tbody>
						<tfoot>
							<tr>
								<th>نام</th>
								<th>نام خانوادگی</th>
								<th>تلفن همراه</th>
								<th>ایمیل</th>
								<th>مبلغ پرداخت شده</th>
							</tr>
						</tfoot>
					</table>
					<div class="dataTables_paginate paging_simple_numbers" id="multi-select_paginate">
						<a class="paginate_button previous disabled" area-controls="multi-select" data-dt-idx="0" tabindex ="-1" href=@Url.Action("getskip","order") id="multi-select_previous">قبلی</a><span>
							@{
							BLL.bltest bla = new BLL.bltest();
							int f = bla.gettotal();
							int count;
							if (f % 10 == 0) count = f / 10;
							else count = (f / 10) + 1;
							for (var i = 0; i < count; i++)
							{
								<a class="paginate_button" area-controls="multi-select" data-dt-idx=@i tabindex="0" href=@Url.Action("getskip","test",new {c=i})>@Convert.ToString(i+1)</a>
							}
							}
						</span>	<a class="paginate_button next" asp-area-controls="multi-select" data-dt-idx="7" tabindex ="1" href=@Url.Action("getskip","test") id="multi-select_next">بعدی</a>
						
						
						
				    <div/>
				</div>
			</div>
		</div>
	</div>
</div>

