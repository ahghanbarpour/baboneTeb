
@{
    ViewData["Title"] = "addIntro";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

@section pre {
   
    <title>Form Validation | Materialize - Material Design Admin Template</title>
    <!-- BEGIN: VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/dropify/css/dropify.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/flag-icon/css/flag-icon.min.css">
    <!-- END: VENDOR CSS-->
    }

<div class="row">
    <div class="col s12">
        <div id="html-validations" class="card card-tabs">
            <div class="card-content">
                <div class="card-title">
                    <div class="row">
                        <div class="col s12 m6 l10">
                            <h4 class="card-title">ورود محصول جدید</h4>
                        </div>
                        <div class="col s12 m6 l2">
                        </div>
                    </div>
                </div>
                <div id="html-view-validations">
                    <form asp-action="addIntro" asp-controller="Introduction" class="formValidate0" id="formValidate0" method="post" enctype="multipart/form-data">

                        <div class="row">
                               
                         
                            <div class="col s12 m8 l9">
                                <label for="uname0" class="card-title">عکس کاور</label>
                                <input type="file" id="input-file-now" class="dropify" name="pic" data-default-file="" />
                            </div>
                            <div class="col s12 m8 l9">
                                <label for="uname0" class="card-title">ویدیو</label>
                                <input type="file" id="input-file-now" class="dropify" name="videoIntro" data-default-file="" />
                            </div>

                            
                            <div class="input-field col s12">
                                <button class="btn waves-effect waves-light right" type="submit" name="action">ارسال
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
